<% content_for :title, "Artist Sign Up" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm rounded-4">
        <div class="card-body">
          <h2 class="card-title text-center text-primary mb-2">Build your profile</h2>
          <p class="text-center text-muted small mb-4">
            Or sign up as a
            <%= link_to "User,", new_user_registration_path, class: "text-primary text-decoration-none" %>
            <%= link_to "Promoter", new_promoter_registration_path, class: "text-primary text-decoration-none" %>
            or
            <%= link_to "Owner", new_owner_registration_path, class: "text-primary text-decoration-none" %>
            instead
          </p>

          <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, data: { turbo: false } do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= hidden_field_tag "artist[artist_lead_token]", params[:artist_lead_token] %>

          <div class="mb-3">
            <%= f.label :username, "Display Name", class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "How your name will appear to users", value: f.object.username.presence || params[:username] %>
          </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :genre, "Music Genre", class: "form-label" %>
                <%= f.select :genre, Artist::GENRES, {}, class: "form-select" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :performance_type, "Type", class: "form-label" %>
                <%= f.select :performance_type, Artist::PERFORMANCE_TYPES, {}, class: "form-select" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :website, "Website (optional)", class: "form-label" %>
              <%= f.text_field :website, class: "form-control", placeholder: "https://yourmusic.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :instagram_username, "Instagram (optional)", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">instagram.com/</span>
                <%= f.text_field :instagram_username, class: "form-control", placeholder: "yourusername" %>
              </div>
              <div class="form-text">Enter your Instagram username without the @ symbol</div>
            </div>

            <div class="mb-3">
              <%= f.label :youtube_username, "YouTube (optional)", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">youtube.com/@</span>
                <%= f.text_field :youtube_username, class: "form-control", placeholder: "yourusername" %>
              </div>
              <div class="form-text">Enter your YouTube handle without the @ symbol</div>
            </div>

            <div class="mb-3">
              <%= f.label :tiktok_username, "TikTok (optional)", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">tiktok.com/@</span>
                <%= f.text_field :tiktok_username, class: "form-control", placeholder: "yourusername" %>
              </div>
              <div class="form-text">Enter your TikTok username without the @ symbol</div>
            </div>

            <div class="mb-3">
              <%= f.label :spotify_artist_id, "Spotify Artist ID (optional)", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">open.spotify.com/artist/</span>
                <%= f.text_field :spotify_artist_id, class: "form-control", placeholder: "4Z8W4fKeB5YxbusRsdQVPb" %>
              </div>
              <div class="form-text">Find your 22-character artist ID from your Spotify artist page URL</div>
            </div>

            <!-- Profile Photo Cropper -->
            <div class="mb-4" data-controller="cropper">
              <%= f.label :image, "Profile Photo (optional)", class: "form-label" %>

              <!-- File input -->
              <%= f.file_field :image,
                    accept: "image/jpeg,image/png",
                    class: "form-control",
                    data: { "cropper-target": "input", action: "change->cropper#previewImage" } %>

              <!-- Cropping interface -->
              <div class="mt-3 d-flex justify-content-center">
                <img data-cropper-target="preview"
                     class="img-thumbnail d-none"
                     style="max-width: 300px; border-radius: 50%;" />
              </div>

              <!-- Final cropped preview label -->
              <div class="text-center mt-4 d-none" id="cropped-preview-label">
                <p class="fw-semibold mb-1">How your image will show on your profile</p>
              </div>

              <!-- Final cropped preview -->
              <div class="text-center">
                <img
                  id="cropper-preview-result"
                  src=""
                  class="d-none rounded-circle border border-white"
                  style="width: 160px; height: 160px; object-fit: cover; box-shadow: 0 20px 40px rgba(0,0,0,0.3);"
                  alt="Cropped preview"
                />
              </div>

              <!-- Save button -->
              <div class="text-center mt-3">
                <button type="button"
                        class="btn btn-sm btn-outline-primary d-none"
                        data-cropper-target="saveButton"
                        data-action="click->cropper#cropAndReplace">
                  Save
                </button>
              </div>
            </div>

            <div class="mb-3" data-controller="character-counter" data-character-counter-max-value="140">
              <%= f.label :bio, "About Me", class: "form-label" %>
              <%= f.text_area :bio,
                    class: "form-control",
                    rows: 4,
                    maxlength: 140,
                    placeholder: "Tell fans about your music style, influences, and what makes your performances special...",
                    data: { action: "input->character-counter#input" } %>
              <div class="form-text d-flex justify-content-between">
                <span>Brief description of your music and style</span>
                <span data-character-counter-target="count">0/140</span>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", autocomplete: "email", value: f.object.email.presence || params[:email] %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="d-grid mb-3">
              <%= f.submit "Create Account", class: "btn btn-primary" %>
            </div>
          <% end %>

          
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .cropper-crop-box,
  .cropper-view-box {
    border-radius: 50% !important;
  }

  .input-group-text {
    font-size: 0.9rem;
    background-color: #f8f9fa;
    border-color: #dee2e6;
  }
</style>
