<% content_for :title, "My Venue Requests" %>

<div class="container my-5" style="max-width: 720px;">
  <% if @venue_requests.any? %>
    <div class="row row-cols-1 g-3 pt-4">
      <% @venue_requests.each do |request| %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0"><%= request.name %></h5>
                <span class="badge bg-<%= request.status == 'pending' ? 'warning' : request.status == 'approved' ? 'success' : 'danger' %>">
                  <%= request.status.humanize %>
                </span>
              </div>

              <p class="card-text text-muted mb-2">
                <%= request.full_address %>
              </p>

              <div class="small text-muted">

                <div>
                  <strong>Category:</strong> <%= request.category.humanize %>
                </div>

                <!-- Submitted row with right-aligned actions -->
                <div class="d-flex justify-content-between align-items-center mt-1">
                  <div>
                    <strong>Submitted:</strong> <%= request.created_at.strftime("%B %d, %Y") %>
                  </div>
                  <div class="d-flex gap-2">
                    <% if request.approved? && request.venue_id %>
                      <%= link_to "View Venue", venue_path(request.venue), class: "btn btn-sm btn-primary" %>
                    <% end %>

                    <% if request.pending? %>
                      <%= link_to "Cancel Request",
                                  venue_request_path(request),
                                  method: :delete,
                                  class: "btn btn-sm btn-outline-danger",
                                  confirm: "Are you sure you want to cancel this venue request? This action cannot be undone.",
                                  data: { turbo_method: :delete } %>
                    <% end %>
                  </div>
                </div>
              </div>

              <% if request.notes.present? %>
                <p class="card-text mt-2"><small class="text-muted"><%= request.notes %></small></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted mt-4">
      <p>You haven't submitted any venue requests yet.</p>
      <div class="mt-3">
        <%= link_to "Add a Venue", new_venue_request_path, class: "btn btn-success me-2" %>
      </div>
    </div>
  <% end %>
</div>
