<!-- app/views/pages/feedback.html.erb -->
<div class="container my-5 pt-2">
  <!-- Hero Section -->
  

  <!-- Message from Pickleball -->
  <div class="row mb-5">
    <div class="col-lg-8 mx-auto">
      <div class="info-card shadow-sm">
        <p class="fs-5 text-muted mb-3">
          We want Pickleball to be easy to use & provide value to Artists, Venue Owners & Music Fans.
        </p>
        <p class="fs-5 text-muted mb-0">
          Pickleball is also very new. Whether you've found a bug, have suggestions for improvement, or just want to share your thoughts, we'd love to hear from you!
        </p>
      </div>
    </div>
  </div>

  <!-- Feedback Form -->
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="feedback-form-card shadow-sm">
        <%= form_with url: submit_feedback_path, method: :post, local: true, data: { turbo: false } do |f| %>
          
          <!-- Categories -->
          <div class="mb-4">
            <label class="form-label fw-bold">What type of feedback are you sharing? (Optional - select all that apply)</label>
            <div class="category-checkboxes">
              <div class="form-check mb-2">
                <%= check_box_tag 'feedback[categories][]', 'System Bug', false, class: 'form-check-input', id: 'category_bug' %>
                <%= label_tag 'category_bug', 'System Bug', class: 'form-check-label' %>
              </div>
              <div class="form-check mb-2">
                <%= check_box_tag 'feedback[categories][]', 'User Experience', false, class: 'form-check-input', id: 'category_ux' %>
                <%= label_tag 'category_ux', 'User Experience', class: 'form-check-label' %>
              </div>
              <div class="form-check mb-2">
                <%= check_box_tag 'feedback[categories][]', 'Visuals / Format', false, class: 'form-check-input', id: 'category_visuals' %>
                <%= label_tag 'category_visuals', 'Visuals / Format', class: 'form-check-label' %>
              </div>
              <div class="form-check mb-2">
                <%= check_box_tag 'feedback[categories][]', 'Other', false, class: 'form-check-input', id: 'category_other' %>
                <%= label_tag 'category_other', 'Other', class: 'form-check-label' %>
              </div>
            </div>
          </div>

          <!-- Message -->
          <div class="mb-4">
            <label for="feedback_message" class="form-label fw-bold">Your Feedback</label>
            <%= text_area_tag 'feedback[message]', nil, class: "form-control", rows: 8, placeholder: "Tell us what's on your mind...", required: true, id: 'feedback_message' %>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <%= f.submit "Submit Feedback", class: "btn btn-primary btn-modern btn-lg" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-section {
    background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
    color: white;
    padding: .25rem 0;
    border-radius: 1rem;
    margin-bottom: 3rem;
  }

  .info-card {
    border: none;
    border-radius: 1rem;
    padding: 2rem;
    background: linear-gradient(135deg, #e7f1ff 0%, #cfe2ff 100%);
    border-left: 4px solid #0d6efd;
  }

  .feedback-form-card {
    border: none;
    border-radius: 1rem;
    padding: 2.5rem;
    background: white;
    border-left: 4px solid #0d6efd;
  }

  .category-checkboxes {
    padding-left: 0.5rem;
  }

  .form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
  }

  .form-control {
    border-radius: 0.5rem;
    border: 2px solid #e9ecef;
    transition: border-color 0.2s;
  }

  .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
  }

  .btn-modern {
    padding: 0.75rem 2rem;
    border-radius: 2rem;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn-modern:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
  }
</style>
