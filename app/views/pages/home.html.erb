<% content_for :title, "Pickleball" %>

<div class="container py-5">
  <section class="home-hero">
    <div class="home-hero__eyebrow">Coach in your pocket</div>
    <div class="row g-4 align-items-center mt-2">
      <div class="col-lg-7">
        <h1 class="home-hero__title">Upload a swing. Get instant, focused feedback.</h1>
        <p class="home-hero__lede mt-3">
          Pickleball turns your video into a clear practice plan. Upload, analyze, and learn
          exactly what to adjust before your next session.
        </p>
        <div class="d-flex flex-wrap gap-3 mt-4">
          <%= link_to "Upload a video", new_video_path, class: "home-hero__cta" %>
          <%= link_to "View dashboard", dashboard_path, class: "home-hero__ghost" %>
        </div>
        <div class="home-metrics">
          <div class="home-metric">
            <h3>2 min</h3>
            <div class="text-muted">Average analysis time</div>
          </div>
          <div class="home-metric">
            <h3>3 steps</h3>
            <div class="text-muted">Clear practice checklist</div>
          </div>
          <div class="home-metric">
            <h3>One goal</h3>
            <div class="text-muted">Sharpen your mechanics</div>
          </div>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="home-hero__card">
          <h4 class="mb-3">What you get</h4>
          <ul class="mb-0 text-muted">
            <li>Computer vision breakdown of your stroke.</li>
            <li>Plain-English coaching notes with priorities.</li>
            <li>A follow-up checklist you can save.</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="home-flow">
    <div class="home-flow__item">
      <div class="home-flow__badge">01</div>
      <h4 class="mt-3">Capture</h4>
      <p class="text-muted mb-0">Record straight from your phone or choose a recent clip.</p>
    </div>
    <div class="home-flow__item">
      <div class="home-flow__badge">02</div>
      <h4 class="mt-3">Analyze</h4>
      <p class="text-muted mb-0">Our model tracks key motion cues and timing.</p>
    </div>
    <div class="home-flow__item">
      <div class="home-flow__badge">03</div>
      <h4 class="mt-3">Improve</h4>
      <p class="text-muted mb-0">Get a short, actionable plan for your next practice.</p>
    </div>
  </section>
</div>
