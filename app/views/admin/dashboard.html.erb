<% content_for :title, "Admin Dashboard" %>

<div class="container-fluid py-3 py-md-4">
  <!-- Header -->
  <div class="mb-3 mb-md-4">
    <h1 class="h3 mb-1">Admin Dashboard</h1>
    <small class="text-muted d-block mb-3">Review requests, create venues, and monitor recent activity.</small>
    
    <!-- Action buttons - stacked on mobile -->
    <div class="d-grid gap-2">
      <div class="row g-2">
        <div class="col-6 col-md-auto">
          <%= link_to "Add Event", new_event_path, class: "btn btn-primary btn-sm w-100" %>
        </div>
        <div class="col-6 col-md-auto">
          <%= link_to "Requests", admin_venue_requests_path, class: "btn btn-outline-primary btn-sm w-100" %>
        </div>
        <div class="col-6 col-md-auto">
          <%= link_to "Venues", admin_venues_path, class: "btn btn-outline-secondary btn-sm w-100" %>
        </div>
        <div class="col-6 col-md-auto">
          <%= link_to "Create Venue", new_admin_venue_path, class: "btn btn-success btn-sm w-100" %>
        </div>
        <div class="col-12 col-md-auto">
          <%= link_to "Metrics", admin_metrics_path, class: "btn btn-primary btn-sm w-100" %>
        </div>
        <div class="col-12 col-md-auto">
          <%= link_to "Rake", admin_event_imports_path, class: "btn btn-primary btn-sm w-100" %>
        </div %>
      </div>
    </div>
  </div>

  <!-- KPI cards - 2 columns on mobile, 4 on desktop -->
  <div class="row g-2 g-md-3 mb-3 mb-md-4">
    <div class="col-6 col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-3">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="text-muted mb-0 small">Pending</h6>
            <i class="fas fa-clock text-warning"></i>
          </div>
          <div class="h2 mb-0"><%= @stats[:pending_count] %></div>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-3">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="text-muted mb-0 small">Approved</h6>
            <i class="fas fa-check-circle text-success"></i>
          </div>
          <div class="h2 mb-0"><%= @stats[:approved_count] %></div>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-3">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="text-muted mb-0 small">Rejected</h6>
            <i class="fas fa-times-circle text-danger"></i>
          </div>
          <div class="h2 mb-0"><%= @stats[:rejected_count] %></div>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-3">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="text-muted mb-0 small">Claims</h6>
            <i class="fas fa-crown text-info"></i>
          </div>
          <div class="h2 mb-0"><%= @stats[:ownership_claims] %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs: Pending / Recent -->
  <ul class="nav nav-pills mb-3 flex-nowrap overflow-auto" id="adminTabs" role="tablist" style="scrollbar-width: none; -ms-overflow-style: none;">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pending-tab" data-bs-toggle="pill" data-bs-target="#pending-pane" type="button" role="tab" aria-controls="pending-pane" aria-selected="true">
        Pending
        <% if @pending_venue_requests.any? %>
          <span class="badge text-bg-warning ms-1"><%= @pending_venue_requests.count %></span>
        <% end %>
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="recent-tab" data-bs-toggle="pill" data-bs-target="#recent-pane" type="button" role="tab" aria-controls="recent-pane" aria-selected="false">
        Recent
      </button>
    </li>
  </ul>

  <div class="tab-content">
    <!-- Pending pane -->
    <div class="tab-pane fade show active" id="pending-pane" role="tabpanel" aria-labelledby="pending-tab">
      <% if @pending_venue_requests.any? %>
        <div class="accordion" id="pendingRequestsAccordion">
          <% @pending_venue_requests.each_with_index do |request, idx| %>
            <%= render partial: "admin/venue_request_card", locals: { request: request, idx: idx } %>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-success">
          <h5 class="mb-1">All caught up! ðŸŽ‰</h5>
          <div class="text-muted small">No pending venue requests at the moment.</div>
        </div>
      <% end %>
    </div>

    <!-- Recent pane -->
    <div class="tab-pane fade" id="recent-pane" role="tabpanel" aria-labelledby="recent-tab">
      <div class="row g-2 g-md-3">
        <!-- Recently Approved -->
        <div class="col-12 col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-success text-white py-2">
              <h6 class="mb-0 small">Recently Approved</h6>
            </div>
            <div class="card-body p-2 p-md-3">
              <% if @recent_approved.any? %>
                <div class="list-group list-group-flush">
                  <% @recent_approved.each do |request| %>
                    <div class="list-group-item px-0 py-2">
                      <div class="d-flex justify-content-between align-items-start gap-2">
                        <div class="flex-grow-1 min-w-0">
                          <div class="fw-bold text-truncate"><%= request.name %></div>
                          <div class="d-flex gap-1 align-items-center flex-wrap">
                            <% if request.existing_venue_claim? %>
                              <span class="badge bg-info" style="font-size: 0.7rem;">Claim</span>
                            <% else %>
                              <span class="badge bg-primary" style="font-size: 0.7rem;">New</span>
                            <% end %>
                            <small class="text-muted"><%= time_ago_in_words(request.updated_at) %> ago</small>
                          </div>
                        </div>
                        <% if request.venue_id %>
                          <%= link_to "View", venue_path(request.venue), class: "btn btn-sm btn-outline-primary flex-shrink-0" %>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted mb-0 small">No recent approvals</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Recently Rejected -->
        <div class="col-12 col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-danger text-white py-2">
              <h6 class="mb-0 small">Recently Rejected</h6>
            </div>
            <div class="card-body p-2 p-md-3">
              <% if @recent_rejected.any? %>
                <div class="list-group list-group-flush">
                  <% @recent_rejected.each do |request| %>
                    <div class="list-group-item px-0 py-2">
                      <div class="fw-bold text-truncate"><%= request.name %></div>
                      <div class="d-flex gap-1 align-items-center flex-wrap">
                        <% if request.existing_venue_claim? %>
                          <span class="badge bg-info" style="font-size: 0.7rem;">Claim</span>
                        <% else %>
                          <span class="badge bg-primary" style="font-size: 0.7rem;">New</span>
                        <% end %>
                        <small class="text-muted"><%= time_ago_in_words(request.updated_at) %> ago</small>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted mb-0 small">No recent rejections</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Hide scrollbar for horizontal nav on mobile */
  .nav-pills::-webkit-scrollbar {
    display: none;
  }
  
  /* Ensure minimum touch target size on mobile */
  @media (max-width: 767.98px) {
    .btn-sm {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
    }
    
    .nav-link {
      font-size: 0.9rem;
      white-space: nowrap;
    }
  }
</style>
