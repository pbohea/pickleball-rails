<!-- app/views/admin/venues/edit_owner.html.erb -->
<div class="container pt-4" style="max-width: 700px;">
  <h2 class="mb-3">Edit Venue Owner</h2>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-2"><%= @venue.name %></h5>
      <p class="mb-1"><strong>Slug:</strong> <code><%= @venue.slug %></code></p>
      <p class="mb-1"><strong>Place ID:</strong> <code><%= @venue.place_id %></code></p>
      <p class="mb-0"><strong>Current Owner:</strong>
        <% if @venue.owner %>
          <%= @venue.owner.email %>
        <% else %>
          <em>None</em>
        <% end %>
      </p>
    </div>
  </div>

  <%= form_with url: update_owner_admin_venue_path(@venue), method: :patch, local: true do |f| %>
    <div class="mb-3">
      <label class="form-label">Assign New Owner</label>
      <%= select_tag :owner_id,
            options_for_select(
              Owner.order(:email).pluck(:email, :id),
              selected: @venue.owner_id
            ),
            include_blank: "— No owner —",
            class: "form-select" %>
      <div class="form-text">
        Choose an owner and click “Save”. To remove, pick “No owner” or use the Remove button below.
      </div>
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back to Admin", admin_dashboard_path, class: "btn btn-secondary ms-auto" %>
    </div>
  <% end %>
    <% if @venue.owner_id.present? %>
        <%= button_to "Remove Owner",
              remove_owner_admin_venue_path(@venue),
              method: :delete,
              form: { data: { turbo_confirm: "Remove owner from this venue?" } },
              class: "btn btn-outline-danger" %>
    <% end %>
</div>
