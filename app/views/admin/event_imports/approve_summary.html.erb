<!-- app/views/admin/event_imports/approve_summary.html.erb -->
<div class="container mt-4">
  <h3>Import Successful</h3>

  <p><strong>Total events created:</strong> <%= @total %></p>

  <% if @per_venue.any? %>
    <h5 class="mt-3">By Venue</h5>
    <ul class="list-group">
      <% @per_venue.each do |venue, count| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to venue.name, venue_path(venue), target: "_blank", rel: "noopener" %>
          <span class="badge bg-primary rounded-pill"><%= count %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No events were created.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Import Batch", admin_event_import_path(@batch), class: "btn btn-outline-secondary" %>
  </div>
</div>
