<!-- app/views/feedback_mailer/feedback_submission.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; }
    .header { background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); color: white; padding: 20px; border-radius: 8px; margin-bottom: 20px; }
    .content { background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #0d6efd; }
    .label { font-weight: bold; color: #0d6efd; }
    .message-box { background: white; padding: 15px; border-radius: 5px; margin-top: 10px; }
    .footer { margin-top: 20px; padding-top: 20px; border-top: 2px solid #e9ecef; color: #6c757d; font-size: 0.9em; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2 style="margin: 0;">New Feedback Submission</h2>
    </div>

    <div class="content">
      <p>
        <span class="label">From:</span> 
        <% if @submitter_email.present? %>
          <%= @submitter_email %> (<%= @submitter_type %>)
        <% else %>
          Non-signed-up user
        <% end %>
      </p>

      <p>
        <span class="label">Submitted:</span> 
        <%= @timestamp.strftime("%B %d, %Y at %I:%M %p %Z") %>
      </p>

      <% if @categories.any? %>
        <p>
          <span class="label">Categories:</span> 
          <%= @categories.join(", ") %>
        </p>
      <% else %>
        <p>
          <span class="label">Categories:</span> 
          None selected
        </p>
      <% end %>

      <p class="label">Message:</p>
      <div class="message-box">
        <%= simple_format(@message) %>
      </div>
    </div>

    <div class="footer">
      <p>This feedback was submitted through the Pickleball feedback form.</p>
    </div>
  </div>
</body>
</html>
